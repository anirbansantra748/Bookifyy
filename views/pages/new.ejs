<% layout("/layouts/boilerplate.ejs") %>

<body>
      <div class="row mt-4">
        <div class="col-7 offset-2">
          <form action="/new" method="post">
    
            <div class="mb-3">
              <label for="title" class="form-label">Title-</label>
              <input
                type="text"
                name="title"
                placeholder="enter suitable title"
                class="form-control"
                required
              />
              <div class="valid-feedback">Title looks good</div>  
              <div class="invalid-feedback">Add a title</div>  
            </div>
    
            <div class="mb-3">
              <label for="description" class="form-label">Description-</label>
              <textarea
                name="description"
                id="desc"
                cols="40"
                rows="2"
                class="form-control"
                required
              ></textarea>
              <div class="valid-feedback">description looks good</div>  
              <div class="invalid-feedback">Fill the description</div>  
            </div>
            
            <div class="mb-3">
              <label for="image" class="form-label">Image Link-</label>
              <input
                type="text"
                name="image"
                placeholder="enter suitable image link"
                class="form-control"
                required
              />
              <div class="valid-feedback">link looks good</div>  
              <div class="invalid-feedback">Add a valid link</div>  
            </div>
    
            <div class="mb-3">
              <label for="pdf" class="form-label">Pdf Link-</label>
              <input
                type="text"
                name="pdf"
                placeholder="enter suitable pdf link"
                class="form-control"
                required
              />
              <div class="valid-feedback">link looks good</div>  
              <div class="invalid-feedback">Add a valid link</div>  
            </div>
    
            <button class="btn btn-outline-success">submit</button>
          </form>
        </div>
      </div>
</body>